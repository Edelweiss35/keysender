<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <h1>{{ status }} orders</h1>

    {% if page > 0 %}
        <a href="{{ path('orders', {status: status, page: page - 1}) }}">&lt;&lt;Previous</a>
    {% endif %}
    <strong>{{ page }}</strong>
    <a href="{{ path('orders', {status: status, page: page + 1}) }}">Next&gt;&gt;</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Order number</th>
            <th scope="col">address_billing.first_name</th>
            <th scope="col">items_count</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td><a href="{{ path('order', {orderId: order.order_number}) }}">{{ order.order_number }}</a></td>
                <td>{{ order.address_billing.first_name }}</td>
                <td>{{ order.items_count }}</td>
            </tr>
        {% endfor %}
    </table>
</div>

</body>
</html>